<% include partials/header %>


<div class="ui main text container segment">
      <div class="ui huge header">New Blog</div>
<form class="ui form" Method="POST" action="/blogs">
  <div class="field">
    <label>Title</label>
    <input type="text" name="blog[title]" placeholder="Title" required>
  </div>
  <div class="field">
    <label>Image</label>
    <input type="text" name="blog[image]" placeholder="Image Url" required>
  </div>
  
  <div class="field">
    <label>Blog Content</label>
   <textarea name="blog[body]" placeholder="Blog Content" required></textarea>
  </div>
  
  <button class="ui button" type="submit">Submit</button>
</form>
</div>
